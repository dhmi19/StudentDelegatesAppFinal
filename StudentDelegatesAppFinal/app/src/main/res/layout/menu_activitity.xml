<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="activity"
            type="com.example.dhruvmittal.studentdelegatesapp.activity.MenuActivity"/>
    </data>


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:orientation="vertical"
    tools:context="com.example.dhruvmittal.studentdelegatesapp.activity.LogInActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/DisplayUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/CanteenButton"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="Canteen"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="106dp"
            android:onClick="@{()->activity.openCanteenPage()}"/>

        <Button
            android:id="@+id/SubjectButton"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Subject"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="106dp"
            android:onClick="@{()->activity.openSubjectPage()}"/>

        <Button
            android:id="@+id/ECAButton"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="ECA"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="106dp"
            android:onClick="@{()->activity.openECAPage()}"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/TeachersButton"
                android:layout_width="120dp"
                android:layout_height="125dp"
                android:backgroundTint="@android:color/holo_purple"
                android:text="Teachers"
                android:layout_marginLeft="80dp"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="231dp"
                android:onClick="@{()->activity.openTeacherPage()}"/>

            <Button
                android:id="@+id/FreeTimeButton"
                android:layout_width="120dp"
                android:layout_height="125dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="STUDY PERIOD"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="231dp"
                android:onClick="@{()->activity.openFreePeriodPage()}"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/LogOutButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:text="Log Out"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="447dp"
            android:onClick="@{()->activity.openLogInPage()}"/>

        <Button
            android:id="@+id/ReviewHistoryButton"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="View History"
            android:textAlignment="center"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="447dp"
            android:onClick="@{()->activity.openHistoryPage()}"/>

        <Button
            android:id="@+id/AccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="447dp"
            android:onClick="@{()->activity.openUpdateAccountPage()}"/>

        <Button
            android:id="@+id/ReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="447dp"
            android:onClick="@{()->activity.openReportPage()}"/>
    </LinearLayout>
</LinearLayout>
</layout>