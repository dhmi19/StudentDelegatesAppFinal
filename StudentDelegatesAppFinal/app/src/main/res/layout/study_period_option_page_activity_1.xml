        tools:layout_editor_absoluteY="235dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">

        <CheckBox
            android:id="@+id/StudyPeriodAnswer2A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="48dp"
            android:text="@string/study_period_answer_2a_text"
            />

        <CheckBox
            android:id="@+id/StudyPeriodAnswer2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/study_period_answer_2b_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/StudyPeriodAnswer2C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/study_period_answer_2c_text"
            android:layout_marginRight="70dp"
            />

        <CheckBox
            android:id="@+id/StudyPeriodAnswer2D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/study_period_answer_2d_text"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/StudyPeriodQuestion3Label"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom"
